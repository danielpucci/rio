<!DOCTYPE html>
<html lang="en">
    <head>
        <!-- Meta -->
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">        <!-- Others -->        <title>RIO &raquo; @ViewBag.Title</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />

        <!-- Styles -->
        @Styles.Render("~/Bundles/Styles/Plugins")
        @Styles.Render("~/Bundles/Styles/Main")
    </head>
    <body id="page-@ViewBag.PageId">
        <!-- TaskManager: Loading -->
        <div id="TaskManagerLoading" style="display: none;" class="transition">
			<div class="task-manager-text">Aguarde...</div>
			<div class="icon-loading"></div>
		</div>

        <!-- TaskManager: Erros e avisos -->
        <div id="TaskManagerError" style="display: none;" class="transition">            <div class="alert alert-error">
                <ul></ul>
            </div>
        </div>
        <!-- Topo da página -->
        <header id="page-header" class="navbar navbar-default navbar-fixed-top">
            <div class="container">
                <nav class="navbar navbar-default" role="navigation">
                  <!-- Brand and toggle get grouped for better mobile display -->
                  <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                      <span class="sr-only">Toggle navigation</span>
                      <span class="icon-bar"></span>
                      <span class="icon-bar"></span>
                      <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand logo-nav" href="/">
                        <img src="@Url.Content("~/Content/Images/mini-logo.png")" alt="Alternate Text" />
                    </a>
                  </div>

                  <!-- Collect the nav links, forms, and other content for toggling -->
                  <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <ul class="nav navbar-nav">
                      <li class="active"><a href="timesheet">Timesheet</a></li>
                      <li><a href="#">Bug Report</a></li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                      <li class="dropdown fix-perfil-config">
                        <a href="#" class="dropdown-toggle glyphicon glyphicon-cog btn-lg" data-toggle="dropdown"></a>
                        <ul class="dropdown-menu">
                          <li><a href="#">Alterar Perfil</a></li>
                          <li class="divider"></li>
                          <li><a href="#">Logout</a></li>
                        </ul>
                      </li>
                      <li class="fix-photo-perfil"><img src="@Url.Content("~/Content/Images/foto-perfil.png")" alt="Foto" /></li>
                    </ul>
                  </div><!-- /.navbar-collapse -->
                </nav>
            </div>
        </header>

        <!-- Corpo da página -->
        <main id="page-content">
            <div class="page-container">
                @RenderBody()
            </div>
        </main>

        <!-- Rodapé da página -->
        <footer id="page-footer">
            <div class="container">
            </div>
        </footer>

        <!-- Scripts -->
        @Scripts.Render("~/Bundles/Scripts/Plugins")
        @Scripts.Render("~/Bundles/Scripts/Main")

        @RenderSection("scripts", required: false)
    </body>
</html>